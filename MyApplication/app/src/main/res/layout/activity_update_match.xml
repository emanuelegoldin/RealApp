<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewTeam1"
            android:layout_width="200dp"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/editTextGol1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_alignParentRight="true"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textViewTeam2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewTeam1"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/editTextGol2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/editTextGol1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_alignParentRight="true"
            tools:ignore="RtlCompat" />
        <Button
            android:id="@+id/buttonSetResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextGol2"
            android:text="Aggiorna"
            tools:ignore="UnknownId" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>