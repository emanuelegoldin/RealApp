<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.filippocenonfolo.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateTournamentActivity"
            android:label="@string/title_activity_create_tournament" />
        <activity
            android:name=".TournamentDataActivity"
            android:label="@string/title_activity_tournament_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddTeamActivity" />
        <activity android:name=".GenerateGroupsActivity" />
        <activity android:name=".UpdateMatchActivity" />
        <activity android:name=".NonCompleteTournamentActivity" />
        <activity android:name=".ProfileActivity"></activity>
    </application>

</manifest>